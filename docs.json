{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Brook SDK",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#1E40AF"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Overview",
            "pages": ["index", "getting-started", "authentication"]
          },
          {
            "group": "SDK Guides",
            "pages": ["javascript-sdk", "react-sdk", "rest-api"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Console",
          "href": "https://console.aptly.cloud/brook",
          "icon": "terminal"
        },
        {
          "anchor": "Live Demo",
          "href": "https://demo.aptly.cloud",
          "icon": "play"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/aptly-cloud/brook",
          "icon": "github"
        },
        {
          "anchor": "Status",
          "href": "https://status.aptly.cloud",
          "icon": "signal"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://console.aptly.cloud/brook"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/aptly-cloud/brook"
    }
  }
}
